<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginStart="@dimen/margin_min"
    android:layout_marginTop="@dimen/margin_min"
    android:layout_marginEnd="@dimen/margin_min"
    app:cardCornerRadius="5dp"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRunnerNumber"
            style="@style/TextM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_marginTop="@dimen/margin_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRunnerName"
            style="@style/TextM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_s"
            app:layout_constraintBottom_toBottomOf="@+id/tvRunnerNumber"
            app:layout_constraintStart_toEndOf="@+id/tvRunnerNumber"
            app:layout_constraintTop_toTopOf="@+id/tvRunnerNumber" />

        <TextView
            android:id="@+id/tvRunnerSurname"
            style="@style/TextM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_min"
            app:layout_constraintBottom_toBottomOf="@+id/tvRunnerName"
            app:layout_constraintStart_toEndOf="@+id/tvRunnerName"
            app:layout_constraintTop_toTopOf="@+id/tvRunnerName" />

        <TextView
            android:id="@+id/tvCurrentCheckpoint"
            style="@style/TextM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_l"
            app:layout_constraintBottom_toBottomOf="@+id/tvRunnerSurname"
            app:layout_constraintStart_toEndOf="@+id/tvRunnerSurname"
            app:layout_constraintTop_toTopOf="@+id/tvRunnerSurname" />

        <com.gmail.maystruks08.nfcruntracker.ui.stepview.HorizontalStepView
            android:id="@+id/runnerProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRunnerSurname" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
