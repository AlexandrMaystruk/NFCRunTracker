<?xml version="1.0" encoding="utf-8"?>
<com.gmail.maystruks08.nfcruntracker.ui.views.CustomConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/distanceCard"
    android:layout_width="120dp"
    android:layout_height="90dp"
    android:layout_marginEnd="@dimen/margin_xs"
    android:text="@string/male"
    app:backgroundColor="@color/colorAccent"
    app:cornerAll="@dimen/cardview_default_elevation"
    app:strokeLineColor="@color/colorWhite"
    app:strokeLineWidth="2dp">

    <TextView
        android:id="@+id/tvDistanceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xs"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toStartOf="@+id/chartView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="@dimen/margin_xs"
        android:background="@drawable/custom_radio_button"
        android:text="Statistic"
        android:textSize="@dimen/text_xs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDistanceName"
        app:layout_constraintVertical_bias="1.0" />

    <com.gmail.maystruks08.nfcruntracker.ui.views.ChartView
        android:id="@+id/chartView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="@dimen/margin_xs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.gmail.maystruks08.nfcruntracker.ui.views.CustomConstraintLayout>
