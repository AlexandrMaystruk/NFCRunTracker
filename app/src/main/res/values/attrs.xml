<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepProgressView">
        <!-- Common customization -->
        <attr name="colorInactive" format="color" />
        <!-- Node customization -->
        <attr name="nodeDoneDrawable" format="reference" />
        <attr name="nodeUndoneDrawable" format="reference" />
        <attr name="nodeCurrentDrawable" format="reference" />

        <attr name="nodeHeight" format="dimension" />
        <!-- Arc customization -->
        <attr name="arcWidth" format="dimension" />
        <attr name="arcHeight" format="dimension" />
        <attr name="arcColor" format="color" />

        <attr name="textTitlePadding" format="dimension" />
        <attr name="textNodeSize" format="dimension" />
        <attr name="textNodeColor" format="color" />
        <attr name="textNodeTitleSize" format="dimension" />
        <attr name="textNodeTitleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomConstraintLayout">
        <attr name="cornerLeftTop" format="dimension"/>
        <attr name="cornerRightTop" format="dimension"/>
        <attr name="cornerLeftBottom" format="dimension"/>
        <attr name="cornerRightBottom" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="strokeLineWidth" format="dimension"/>
        <attr name="strokeLineColor" format="color"/>
        <attr name="dashLineWidth" format="dimension"/>
        <attr name="dashLineGap" format="dimension"/>

        <attr name="cornerLeftSide" format="dimension"/>
        <attr name="cornerRightSide" format="dimension"/>

        <attr name="cornerAll" format="dimension"/>
    </declare-styleable>
</resources>